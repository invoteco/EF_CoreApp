@page
@model EF_CoreApp.ManageModel
@{
    ViewData["Title"] = "Manage";
}

<h1>Manage</h1>

<h1>Pages/Categories/Manage </h1>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Action</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model.Categories)
        {
            <tr>
                <td>
                    @Html.DisplayFor(molelItem => category.CategoryId)
                </td>
                <td>
                    @Html.DisplayFor(molelItem => category.CategoryName)
                </td>
                <td>
                    <form method="post" asp-page-handler="Delete" asp-route-categoryid="@category.CategoryId" asp-route-categoryname="@category.CategoryName">
                        <button type="submit" class="btn btn-warning">Delete</button>
                    </form>
                </td>
                <td>
                    <form method="post" asp-page-handler="Edit" asp-route-categoryid="@category.CategoryId" asp-route-categoryname="@category.CategoryName">
                        <button type="submit" class="btn btn-warning">Edit</button>
                    </form>
                </td>

            </tr>
        }
    </tbody>
</table>
<hr />

<div class="col-md-4">
    <form method="post" asp-page-handler="Create">
        <h4>Create a new Category.</h4>
        <div class="form-group">
            <label>New Category Name </label>
            <input type="text" name="categoryname" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>
<hr />
